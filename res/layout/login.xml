<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <!-- UI Header -->
    <RelativeLayout android:id="@+id/header"
        android:layout_width="fill_parent" 
        android:layout_height="?android:attr/windowTitleSize"
        android:background="#cf682f"
        android:paddingLeft="5dip">
    
        <TextView android:id="@+id/page_title" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            style="?android:attr/windowTitleStyle"
            android:fadingEdge="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/header_login" />
            
        <ProgressBar android:id="@+id/progressing" 
            style="?android:attr/progressBarStyleSmall"
            android:visibility="gone"
            android:max="10000"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="6dip"
            android:layout_marginRight="3dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    
    </RelativeLayout>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@android:drawable/divider_horizontal_dark" />

    <LinearLayout android:id="@+id/login_form"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/bottom_bar"
        android:paddingBottom="15dip"
        android:paddingTop="15dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip">
    
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_name_title"/>
    
        <EditText android:id="@+id/login_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />
        
        <TextView android:layout_marginTop="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_password_title"/>
        
        <EditText android:id="@+id/login_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:password="true" />
        
        <LinearLayout android:layout_marginTop="5dip"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
        
            <CheckBox android:id="@+id/login_remember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/login_remember_title"
                android:textColorHint="#fff" android:paddingRight="5dip"/>
                
            <Button android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_button_text"
                android:paddingLeft="25dip"
                android:paddingRight="25dip" />
            
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="5dip">
    
        <TextView 
            android:text="@string/not_member_text"
            android:textStyle="bold"
            android:paddingRight="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <Button android:id="@+id/signup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_button_text"
            android:enabled="false"
            android:paddingLeft="25dip"
            android:paddingRight="25dip"/>
        
    </LinearLayout>

</LinearLayout>
