<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="6dip">
    
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
	    <TextView android:id="@+id/plurk_response_author"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/PlurkDisplayname" />

        <TextView android:id="@+id/plurk_response_qualifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PlurkQualifier" />

    </LinearLayout>
    
    <TextView android:id="@+id/plurk_response_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/PlurkContent"/>

    <TextView android:id="@+id/plurk_response_posted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/plurk_response_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="right"
        android:textColor="#888"
        android:textSize="11dip" />

</LinearLayout>