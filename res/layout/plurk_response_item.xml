<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="6dip">
    
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    
        <TextView android:id="@+id/plurk_response_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="14dip" />
            
        <TextView android:id="@+id/plurk_response_qualifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dip"
            android:paddingLeft="5dip"
            android:textColor="#fff" 
            android:textSize="12dip" />
    
    </LinearLayout>
    
    <TextView android:id="@+id/plurk_response_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:textColor="#333"
        android:textColorLink="#03c"/>
        
    <TextView android:id="@+id/plurk_response_posted"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textColor="#888"
        android:paddingRight="8dip"
        android:textSize="12dip" />
    
</LinearLayout>