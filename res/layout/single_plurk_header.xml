<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_plurk_header"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
  
    <ImageView android:id="@+id/single_plurk_author_avatar"
	    android:src="@drawable/avatar_unknown"
	    android:layout_height="48dip"
	    android:layout_width="48dip"
	    android:layout_margin="6dip"
	    android:layout_alignParentLeft="true"
	    android:gravity="center" />
	
    <TextView android:id="@+id/single_plurk_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:layout_marginRight="5dip"
        android:textStyle="bold"
        android:textSize="16dip"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/single_plurk_author_avatar"
        android:text="you" />
	                
    <TextView android:id="@+id/single_plurk_qualifier" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dip"
        android:paddingLeft="5dip"
        android:text="says"
        android:textColor="#fff"
        android:textSize="14dip"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@id/single_plurk_owner" />
	            
	        
    <TextView android:id="@+id/single_plurk_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dip"
        android:layout_marginBottom="5dip"
        android:textColor="#333"
        android:textColorLink="#03c"
        android:layout_toRightOf="@id/single_plurk_author_avatar"
        android:layout_below="@id/single_plurk_owner" />
	    
    <TextView android:id="@+id/single_plurk_posted"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right" 
        android:textColor="#888"
        android:paddingRight="8dip"
        android:textSize="12dip"
        android:layout_below="@id/single_plurk_content" />
	        
	<TextView android:id="@+id/single_plurk_responses_title" 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="#efefef"
	        android:layout_marginTop="5dip"
	        android:paddingTop="1dip"
	        android:paddingLeft="4dip"
	        android:paddingRight="4dip"
	        android:paddingBottom="1dip"
	        android:textColor="#000"
	        android:text="responses"
	        android:layout_below="@id/single_plurk_posted"
	        android:layout_alignParentBottom="true" />    
    
</RelativeLayout>