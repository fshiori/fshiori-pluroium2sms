<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/plurk_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <!-- UI Header -->
    <LinearLayout android:id="@+id/header"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
	    <RelativeLayout
	        android:layout_width="fill_parent" 
	        android:layout_height="?android:attr/windowTitleSize"
	        android:background="#cf682f"
	        android:paddingLeft="5dip">
	    
	        <TextView android:id="@+id/page_title" 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" 
	            style="?android:attr/windowTitleStyle"
	            android:fadingEdge="horizontal"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:text="@string/header_all" />
	            
	        <ProgressBar android:id="@+id/load_progressing" 
	            style="?android:attr/progressBarStyleSmall"
	            android:visibility="gone"
	            android:max="10000"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginLeft="6dip"
	            android:layout_marginRight="3dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" />
	    
	    </RelativeLayout>
	    
	    <View android:layout_width="fill_parent"
	        android:layout_height="1dip"
	        android:background="@android:drawable/divider_horizontal_dark" />
	        	        
    </LinearLayout>
    
    <RelativeLayout android:id="@+id/plurk_input_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/bottom_bar"
        android:paddingBottom="1dip"
        android:paddingLeft="4dip"
        android:paddingRight="4dip"
        android:paddingTop="5dip">
        
        <Button android:id="@+id/plurk_button"
                android:layout_alignParentRight="true"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:text="@string/plurk_button_text" />
                
        <EditText android:id="@+id/plurk_text"
            android:layout_toLeftOf="@id/plurk_button"
            android:layout_alignParentLeft="true"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="@string/plurk_text_hint" />
        
    </RelativeLayout>

    <ListView android:id="@+id/plurk_list_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
        
</LinearLayout>
