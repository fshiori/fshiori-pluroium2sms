<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/user_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <!-- UI Header -->
    <LinearLayout android:id="@+id/header"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <RelativeLayout
            android:layout_width="fill_parent" 
            android:layout_height="?android:attr/windowTitleSize"
            android:background="#cf682f"
            android:paddingLeft="5dip">
        
            <TextView android:id="@+id/page_title" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                style="?android:attr/windowTitleStyle"
                android:fadingEdge="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />
                
            <ProgressBar android:id="@+id/load_progressing" 
                style="?android:attr/progressBarStyleSmall"
                android:visibility="gone"
                android:max="10000"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="3dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        
        </RelativeLayout>
        
        <View android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@android:drawable/divider_horizontal_dark" />
                        
    </LinearLayout>
    
    <RelativeLayout android:padding="5dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    
        <ImageView android:id="@+id/avatar"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:src="@drawable/avatar_unknown"
            android:layout_marginRight="5dip"
            android:layout_alignParentLeft="true" />
            
        <TextView android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/avatar"
	        android:layout_marginRight="5dip"
	        android:textStyle="bold"
	        android:textColor="#000"
	        android:textSize="20dip" />
	        
	        
	    <TextView android:id="@+id/karma_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Karma:"
	        android:layout_marginRight="5dip"
	        android:layout_below="@id/nickname"
	        android:layout_toRightOf="@id/avatar" />
	        
	        
	    <TextView android:id="@+id/karma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/karma_label"
            android:layout_below="@id/nickname"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="16dip" />
        
    </RelativeLayout>
    
    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dip">
    
        <LinearLayout android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:text="@string/profile_gender"/>
                
            <TextView android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000" />
        
        </LinearLayout>
    
        <LinearLayout android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:text="@string/profile_location"/>
                
            <TextView android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000" />
        
        </LinearLayout>


    </LinearLayout>
    
</LinearLayout>